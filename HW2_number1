#include <iostream>

using namespace std;
double min(double a, double b, double c){
  double w=a;
  if (w>b){
    w=b;
  }
  if (w>c){
    w=c;
  }
  return w;
}

double max(double a, double b, double c){
  double q=a;
  if (q<b){
    q=b;
  }
  if (q<c){
    q=c;
  }
  return q;
}

double avg(double a, double b, double c){
  double s=(a+b+c)/3;
  return s;
}

double med(double a, double b, double c){
  if(a>b){
    if(a<c){
      return a; 
    }
    else{
      if(c>b){
        return c; 
      }
      else{
        return b; 
      }
    }
  }
  else{ 
    if(b>c){
      if(a>c){ 
        return a;
      }
      else{ 
        return c;
      }
    }
    else{
      return b;
    }
  }
}

void swap(double a, double b, double c){
  double r;
  r=a;
  a=b;
  b=c;
  c=r;
  cout << a << "," << b << "," << c;
}

int main()
{
  double a, b, c;
  cin >> a >> b >> c;
  double t = min(a, b, c);
  double y = max(a, b, c);
  double f = avg(a, b, c);
  double g = med(a, b, c); 
  cout << "min-" << t << endl;
  cout << "max-" << y << endl;
  cout << "avg-" << f << endl;
  cout << "med-" << g << endl;
  swap(a,b,c);
}
